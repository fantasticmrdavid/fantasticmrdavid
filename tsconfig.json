{
	"compilerOptions": {
		"baseUrl": "./",
    	"jsx": "react",
		"target": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"paths": {
			"assets/*": ["src/assets/*"],
			"styles/*": ["src/styles/*"],
			"contexts/*": ["src/contexts/*"],
			"components/*": ["src/components/*"],
			"data/*": ["src/data/*"],
			"helpers/*": ["src/helpers/*"],
			"routers/*": ["src/routers/*"],
			"views/*": ["src/views/*"]
		}
	},
	"include": [
		"src",
		"webpack",
		"*.config.js",
		"<rootDir>/jest-setup.js"
	],
	"exclude": ["node_modules"]
}

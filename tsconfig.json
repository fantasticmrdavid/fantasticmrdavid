{
	"compilerOptions": {
		"baseUrl": "./",
    	"jsx": "react",
		"target": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"paths": {
			"styles/*": ["src/styles/*"],
			"components/*": ["src/components/*"],
			"data/*": ["src/data/*"],
			"helpers/*": ["src/helpers/*"],
			"reducers/*": ["src/reducers/*"],
			"reducers": ["src/reducers"],
			"views/*": ["src/views/*"]
		}
	},
	"include": [
		"./src/**/*"
	]
}
